<div class="container py-4">
  <div class="text-center mb-5 fade-in-up">
    <h1 class="display-5 text-gradient fw-bold mb-3">🌸 花図鑑</h1>
    <p class="lead text-muted">
      高山植物の美しい花々を探索しましょう
    </p>
  </div>
  
  <div class="row g-3 mb-5 fade-in-up" style="animation-delay: 0.2s;">
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-green-light text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-success mb-1 fw-bold"><%= @total_flowers %></h3>
          <small class="text-muted">登録花数</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-pink-light text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-pink mb-1 fw-bold"><%= @blooming_now %></h3>
          <small class="text-muted">見頃の花</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-blue-light text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-primary mb-1 fw-bold"><%= @regions.count %></h3>
          <small class="text-muted">対応地域</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-warning bg-opacity-25 text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-warning mb-1 fw-bold"><%= @seasons.count %></h3>
          <small class="text-muted">開花時期</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-5 fade-in-up" style="animation-delay: 0.4s;">
    <div class="col-12">
      <div class="card border-0 shadow-lg">
        <div class="card-body py-4">
          <%= form_with url: flowers_path, method: :get, local: true, class: "row g-3 align-items-end" do |f| %>
            <div class="col-md-3 col-lg-3">
              <label for="flower_search" class="form-label small text-muted mb-1">花の名前</label>
              <%= f.text_field :search, placeholder: "例: チングルマ", 
                              value: params[:search], 
                              class: "form-control form-control-sm", id: "flower_search" %>
            </div>
            <div class="col-md-3 col-lg-2">
              <label for="blooming_season" class="form-label small text-muted mb-1">開花時期</label>
              <%= f.select :blooming_season, 
                          options_for_select([['すべての季節', '']] + @seasons.map { |s| [s, s] }, params[:blooming_season]),
                          {}, { class: "form-select form-select-sm", id: "blooming_season" } %>
            </div>
            <div class="col-md-3 col-lg-2">
              <label for="region" class="form-label small text-muted mb-1">地域</label>
              <%= f.select :region, 
                          options_for_select([['すべての地域', '']] + @regions.map { |r| [r, r] }, params[:region]),
                          {}, { class: "form-select form-select-sm", id: "region" } %>
            </div>
            <div class="col-md-3 col-lg-2">
              <label for="difficulty" class="form-label small text-muted mb-1">難易度</label>
              <%= f.select :difficulty, 
                          options_for_select([
                            ['すべての難易度', ''],
                            ['初心者', '初心者'],
                            ['中級者', '中級者'],
                            ['上級者', '上級者']
                          ], params[:difficulty]),
                          {}, { class: "form-select form-select-sm", id: "difficulty" } %>
            </div>
            <div class="col-md-3 col-lg-2">
              <label for="sort" class="form-label small text-muted mb-1">並び順</label>
              <%= f.select :sort, 
                          options_for_select([
                            ['名前順', 'name'],
                            ['季節順', 'season'],
                            ['人気順', 'popular']
                          ], params[:sort]),
                          {}, { class: "form-select form-select-sm", id: "sort" } %>
            </div>
            <div class="col-md-auto col-lg-1">
              <%= f.submit "検索", class: "btn btn-success w-100 btn-sm shadow-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% if @flowers.any? %>
      <% @flowers.each do |flower| %>
        <div class="col-6 col-md-4 col-lg-3 mb-4">
          <%= link_to flower_path(flower), class: "text-decoration-none" do %>
            <div class="card border-0 shadow-sm hover-card h-100">
              <div class="position-relative">
                <% if flower.image_url.present? %>
                  <%= image_tag flower.image_url, 
                               class: "card-img-top", 
                               style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <div class="bg-light d-flex align-items-center justify-content-center" 
                       style="height: 200px; width: 100%;">
                    <i class="bi bi-image text-muted" style="font-size: 2.5rem;"></i>
                  </div>
                <% end %>
                
                <% if flower.blooming_season.present? %>
                  <span class="badge bg-success position-absolute top-0 end-0 m-2 shadow-sm">
                    <%= flower.blooming_season %>
                  </span>
                <% end %>
                
                <span class="position-absolute bottom-0 start-0 m-2 badge bg-dark bg-opacity-50 text-white">
                  <i class="bi bi-star-fill text-warning me-1"></i>
                  <%= Favorite.joins(:flower_mountain).where(flower_mountains: { flower_id: flower.id }).count %>
                </span>
              </div>
              
              <div class="card-body">
                <h5 class="card-title mb-1 text-dark fw-bold">
                  <%= flower.name %>
                </h5>
                
                <% if flower.scientific_name.present? %>
                  <p class="text-muted small mb-2">
                    <em><%= flower.scientific_name %></em>
                  </p>
                <% end %>
                
                <p class="card-text small text-muted mb-3">
                  <%= truncate(flower.description, length: 80) %>
                </p>
                
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="bi bi-geo-alt me-1"></i>
                    <%= flower.mountains.count %>箇所
                  </small>
                  <%# 詳細ボタンはカード全体がリンクになっているため不要、削除 %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <div class="text-center py-5">
          <i class="bi bi-flower1 text-muted mb-3" style="font-size: 4rem;"></i>
          <h3 class="text-muted mb-3">花が見つかりませんでした</h3>
          <p class="text-muted mb-4">
            検索条件を変更して再度お試しください
          </p>
          <%= link_to "すべての花を見る", flowers_path, class: "btn btn-success shadow-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @flowers.respond_to?(:current_page) %>
    <div class="row mt-4">
      <div class="col-12">
        <div class="d-flex justify-content-center">
          <%= paginate @flowers %>
        </div>
      </div>
    </div>
  <% end %>
</div>