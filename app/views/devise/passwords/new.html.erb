<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-gradient-to-r from-green-800 to-green-900 text-white py-3">
          <h2 class="h4 mb-0 text-center">パスワードをリセット</h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="mb-4">
              <p class="text-muted">登録したメールアドレスを入力してください。パスワードリセット用のリンクをお送りします。</p>
              
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            
            <div class="d-grid mb-3">
              <%= f.submit "リセット手順を送信", class: "btn btn-success" %>
            </div>
            
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
