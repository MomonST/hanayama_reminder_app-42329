<% content_for :use_Maps, true %>

<div class="container py-4">
  <div class="text-center mb-5 fade-in-up">
    <h1 class="display-5 text-gradient fw-bold mb-3">⛰️ 山の一覧</h1>
    <p class="lead text-muted">
      花が見られる山々を探索しましょう
    </p>
  </div>
  
  <div class="row g-3 mb-5 fade-in-up" style="animation-delay: 0.2s;">
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-green-light text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-success mb-1 fw-bold"><%= @total_mountains %></h3>
          <small class="text-muted">登録山数</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-blue-light text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-primary mb-1 fw-bold"><%= @regions.count %></h3>
          <small class="text-muted">対応地域</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-pink-light text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-pink mb-1 fw-bold"><%= @max_elevation %>m</h3>
          <small class="text-muted">最高標高</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card border-0 bg-warning bg-opacity-25 text-center shadow-sm h-100">
        <div class="card-body py-3">
          <h3 class="text-warning mb-1 fw-bold"><%= @min_elevation %>m</h3>
          <small class="text-muted">最低標高</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-5 fade-in-up" style="animation-delay: 0.4s;">
    <div class="col-12">
      <div class="card border-0 shadow-lg">
        <div class="card-body py-4">
          <%= form_with url: mountains_path, method: :get, local: true, class: "row g-3 align-items-end" do |f| %>
            <div class="col-md-3 col-lg-3">
              <label for="mountain_search" class="form-label small text-muted mb-1">山の名前</label>
              <%= f.text_field :search, placeholder: "例: 富士山", 
                              value: params[:search], 
                              class: "form-control form-control-sm", id: "mountain_search" %>
            </div>
            <div class="col-md-3 col-lg-2">
              <label for="region" class="form-label small text-muted mb-1">地域</label>
              <%= f.select :region, 
                          options_for_select([['すべての地域', '']] + @regions.map { |r| [r, r] }, params[:region]),
                          {}, { class: "form-select form-select-sm", id: "region" } %>
            </div>
            <div class="col-md-2 col-lg-2">
              <label for="difficulty" class="form-label small text-muted mb-1">難易度</label>
              <%= f.select :difficulty, 
                          options_for_select([
                            ['すべての難易度', ''],
                            ['初心者', '初心者'],
                            ['中級者', '中級者'],
                            ['上級者', '上級者']
                          ], params[:difficulty]),
                          {}, { class: "form-select form-select-sm", id: "difficulty" } %>
            </div>
            <div class="col-md-2 col-lg-2">
              <label for="sort" class="form-label small text-muted mb-1">並び順</label>
              <%= f.select :sort, 
                          options_for_select([
                            ['名前順', 'name'],
                            ['標高順', 'elevation'],
                            ['人気順', 'popular']
                          ], params[:sort]),
                          {}, { class: "form-select form-select-sm", id: "sort" } %>
            </div>
            <div class="col-md-3 col-lg-2">
              <label for="elevation_range" class="form-label small text-muted mb-1">標高範囲</label>
              <div class="input-group input-group-sm">
                <%= f.number_field :elevation_min, placeholder: "最低", 
                                  value: params[:elevation_min], 
                                  class: "form-control", id: "elevation_min" %>
                <span class="input-group-text">-</span>
                <%= f.number_field :elevation_max, placeholder: "最高", 
                                  value: params[:elevation_max], 
                                  class: "form-control", id: "elevation_max" %>
              </div>
            </div>
            <div class="col-md-auto col-lg-1">
              <%= f.submit "検索", class: "btn btn-success w-100 btn-sm shadow-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <ul class="nav nav-tabs nav-pills mb-4 justify-content-center fade-in-up" style="animation-delay: 0.6s;" id="viewTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="grid-tab" data-bs-toggle="tab" data-bs-target="#grid-view" type="button" role="tab" aria-controls="grid-view" aria-selected="true">
        <i class="bi bi-grid me-2"></i>グリッド表示
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="map-tab" data-bs-toggle="tab" data-bs-target="#map-view" type="button" role="tab" aria-controls="map-view" aria-selected="false">
        <i class="bi bi-map me-2"></i>地図表示
      </button>
    </li>
  </ul>

  <div class="tab-content" id="viewTabsContent">
    <div class="tab-pane fade show active" id="grid-view" role="tabpanel">
      <div class="row">
        <% if @mountains.any? %>
          <% @mountains.each do |mountain| %>
            <div class="col-6 col-md-4 col-lg-3 mb-4">
              <%= link_to mountain_path(mountain), class: "text-decoration-none" do %>
                <div class="card border-0 shadow-sm hover-card h-100">
                  <div class="position-relative">
                    <% if mountain.image_url.present? %>
                      <%= image_tag mountain.image_url, 
                                  class: "card-img-top", 
                                  style: "height: 200px; object-fit: cover;" %>
                    <% else %>
                      <div class="bg-light d-flex align-items-center justify-content-center" 
                           style="height: 200px; width: 100%;">
                        <i class="bi bi-image text-muted" style="font-size: 2.5rem;"></i>
                      </div>
                    <% end %>
                    
                    <% if mountain.region.present? %>
                      <span class="badge bg-primary position-absolute top-0 end-0 m-2 shadow-sm">
                        <%= mountain.region %>
                      </span>
                    <% end %>
                    
                    <% if mountain.elevation.present? %>
                      <span class="badge bg-success position-absolute top-0 start-0 m-2 shadow-sm">
                        <%= mountain.elevation %>m
                      </span>
                    <% end %>
                  </div>
                  
                  <div class="card-body">
                    <h5 class="card-title mb-1 text-dark fw-bold">
                      <%= mountain.name %>
                    </h5>
                    
                    <p class="card-text small text-muted mb-3">
                      <%= truncate(mountain.description, length: 80) %>
                    </p>
                    
                    <div class="d-flex justify-content-between align-items-center">
                      <small class="text-muted">
                        <i class="bi bi-flower1 me-1"></i>
                        <%= mountain.flowers.count %>種の花
                      </small>
                      <%# 詳細ボタンはカード全体がリンクになっているため不要、削除 %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="col-12">
            <div class="text-center py-5">
              <i class="bi bi-mountain text-muted mb-3" style="font-size: 4rem;"></i>
              <h3 class="text-muted mb-3">山が見つかりませんでした</h3>
              <p class="text-muted mb-4">
                検索条件を変更して再度お試しください
              </p>
              <%= link_to "すべての山を見る", mountains_path, class: "btn btn-success shadow-sm" %>
            </div>
          </div>
        <% end %>
      </div>

      <% if @mountains.respond_to?(:current_page) %>
        <div class="row mt-4">
          <div class="col-12">
            <div class="d-flex justify-content-center">
              <%= paginate @mountains %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade" id="map-view" role="tabpanel">
      <div class="card border-0 shadow-lg">
        <div class="card-body p-0">
          <div id="map" style="height: 600px; width: 100%;"></div>
        </div>
      </div>
    </div>
  </div>
</div>