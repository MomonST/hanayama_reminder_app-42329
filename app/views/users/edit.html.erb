<div class="container py-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "ホーム", root_path %></li>
      <li class="breadcrumb-item"><%= link_to "プロフィール", user_path(@user) %></li>
      <li class="breadcrumb-item active" aria-current="page">編集</li>
    </ol>
  </nav>
  
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-gradient-to-r from-green-800 to-green-900 text-white py-3">
          <h2 class="h4 mb-0 text-center">プロフィール編集</h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_with(model: @user, local: true, class: "needs-validation") do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">エラーが発生しました</h5>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :nickname, "ニックネーム", class: "form-label" %>
              <%= f.text_field :nickname, class: "form-control", required: true %>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <%= f.label :last_name, "姓", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
              </div>
              <div class="col-md-6">
                <%= f.label :first_name, "名", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", required: true %>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <%= f.label :last_name_kana, "姓（カナ）", class: "form-label" %>
                <%= f.text_field :last_name_kana, class: "form-control", required: true %>
              </div>
              <div class="col-md-6">
                <%= f.label :first_name_kana, "名（カナ）", class: "form-label" %>
                <%= f.text_field :first_name_kana, class: "form-control", required: true %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :region, "お住まいの地域", class: "form-label" %>
              <%= f.select :region, User::REGIONS, { include_blank: "選択してください" }, { class: "custom-select" } %>
            </div>
            
            <div class="mb-4">
              <%= f.label :birth_date, "生年月日", class: "form-label" %>
              <%= f.date_field :birth_date, class: "form-control", required: true %>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "更新する", class: "btn btn-success btn-lg" %>
              <%= link_to "キャンセル", user_path(@user), class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
